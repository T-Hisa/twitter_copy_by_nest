{
  "compilerOptions": {
    // "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    // "baseUrl": "./",
    "incremental": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "test", "**/*.spec.ts", "webpack"]
  // "include": [
  //   "./src/front"
  // ]
}
